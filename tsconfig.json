{
  "//": "PRF-COMPLIANT TS CONFIGURATION â€” ChatCast Studio (2025-10-15)",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // --- Module handling ---
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowJs": true,
    "isolatedModules": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true,

    // --- Type and build safety ---
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],

    // --- Path aliases synchronized with vite.config.ts ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "services/*": ["src/services/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "types": ["src/types.ts"],
      "types/*": ["src/types/*"]
    }
  },
  "include": ["src", "vite.config.ts", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
